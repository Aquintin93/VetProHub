<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="paquete.app.vetprohub">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VetProHub"
        tools:targetApi="31">

        <activity
            android:name=".view.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".view.MenuActivity"
            android:exported="true" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.UserProfileActivity"
            android:exported="true" />
        <activity
            android:name=".view.CitationActivity"
            android:exported="true" />
        <activity
            android:name=".view.EmployeeMenuActivity"
            android:exported="true" />
        <activity
            android:name=".view.RegisterEmployeeActivity"
            android:exported="true" />
        <activity
            android:name=".view.EmployeeProfileActivity"
            android:exported="true" />
        <activity
            android:name=".view.EmployeeCitationsActivity"
            android:exported="true" />
        <activity
            android:name=".view.EmployeeCitationsListActivity"
            android:exported="true" />
        <activity
            android:name=".view.EmployeeSettingsActivity"
            android:exported="true" />
        <activity
            android:name=".view.EditCitationActivity"
            android:exported="true" />
    </application>
</manifest>
